{
  "name": "catholic-product-hunt",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.18 <23"
  },
  "scripts": {
    "clean": "rm -rf .next",
    "check:node": "node scripts/check-node-version.mjs",
    "predev": "npm run check:node",
    "dev": "npm run clean && next dev",
    "prebuild": "npm run check:node",
    "build": "next build",
    "prestart": "npm run check:node",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "db:seed": "tsx scripts/seed-firebase.ts",
    "db:schema:status": "tsx scripts/db/schema-status.ts",
    "db:migrate:v1": "tsx scripts/db/migrate-schema-v1.ts",
    "db:reset:versioned": "tsx scripts/db/reset-versioned-schema.ts",
    "db:reset:legacy": "tsx scripts/db/reset-legacy-schema.ts"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "firebase": "^11.1.0",
    "firebase-admin": "^13.0.2",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
